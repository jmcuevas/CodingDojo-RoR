<div class="col-md-2"></div>
<div class="col-md-8">
    <div class="row">
        <div class="col-md-2">
            <a href="/users/<%= @idea.user.id %>"><%= @idea.user.alias %></a> says:
        </div>
        <div class="col-md-10 well well-std">
            <p><%= @idea.content %></p>
        </div>
    </div>

    <h2>People who liked this post:</h2>
    <div class="col-md-2"></div>
    <table class="table table-striped table-bordered col-md-8">
        <tr>
            <th>Alias</th>
            <th>Name</th>
        </tr>
        <% @idea.liked_users.each do |user|  %>
        <tr>
            <td><%= user.alias %></td>
            <td><%= user.name %></td>
        </tr>
        <% end %>
    </table>
    <div class="col-md-2"></div>
</div>
