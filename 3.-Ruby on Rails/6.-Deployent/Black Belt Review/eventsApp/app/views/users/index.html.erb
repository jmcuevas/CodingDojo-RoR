<h1>Welcome</h1>
<% if flash[:reg_errors] != nil %>
    <% flash[:reg_errors].each do |error| %>
        <p><%= error %></p>
    <% end %>
<% end %>
<div>
    <h2>Register</h2>
    <form action="/users/create" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <p>First Name: <input type="text" name="user[first_name]"></p>
        <p>Last Name: <input type="text" name="user[last_name]"></p>
        <p>Email: <input type="text" name="user[email]"></p>
        <p>Location: <input type="text" name="user[city]"> <input type="text" name="user[state]"></p>
        <p>Password: <input type="text" name="user[password]"></p>
        <p>Password Confirmation: <input type="text" name="user[password_confirmation]"></p>
        <input type="submit" value="Register">
    </form>
</div>

<div>
    <h2>Login</h2>
    <form action="/sessions/create" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <p>Email: <input type="text" name="user[email]"></p>
        <p>Password: <input type="text" name="user[password]"></p>
        <input type="submit" value="Login">
    </form>
</div>
