<h1>New product</h1>

<form action="/products" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"
    <p>Name: </p><input type="text" name="name" placeholder="Product Name">
    <p>Description: </p><textarea name="description" placeholder="Product Description" rows="8" cols="40"></textarea>
    <p>Price:</p><input type="text" name="pricing" placeholder="Product Price">
    <input type="submit" value="Create New Product">
</form>
