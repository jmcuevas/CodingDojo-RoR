<h1>Ninja Gold Game</h1>

<h3>Your Gold: <%=session[:gold]%></h3> <!-- Variable for gold total -->

<div>
    <div class="place_container">
        <h2>Farm</h2>
        <p>(earns 10-20 golds)</p>
        <form class="gold_finder" action="rpg/farm" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            <input type="submit" value="Find Gold!!!">
        </form>
    </div>

    <div class="place_container">
        <h2>Cave</h2>
        <p>(earns 5-10 golds)</p>
        <form class="gold_finder" action="rpg/cave" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            <input type="submit" value="Find Gold!!!">
        </form>
    </div>

    <div class="place_container">
        <h2>House</h2>
        <p>(earns 2-5 golds)</p>
        <form class="gold_finder" action="rpg/house" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            <input type="submit" value="Find Gold!!!">
        </form>
    </div>

    <div class="place_container">
        <h2>Casino</h2>
        <p>(earns/takes 0-50 golds)</p>
        <form class="gold_finder" action="rpg/casino" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            <input type="submit" value="Find Gold!!!">
        </form>
    </div>
</div>

<div>
    <p>Activities: </p>
    <div class="act_log">
        <% session[:activity_log].each do |log|%>
            <p><%=log%></p>
        <%end%>
    </div>
</div>
