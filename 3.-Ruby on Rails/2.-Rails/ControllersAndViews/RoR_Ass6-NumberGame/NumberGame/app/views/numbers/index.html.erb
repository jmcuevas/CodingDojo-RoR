<h1>Welcome to the Great Number Game!</h1>
<h3>I am thinking of a number between 1 and 100</h3>
<h3>Take a guess!</h3>

<form action="numbers/try" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <input type="text" name="guess">
    <input type="submit" value="Submit">
</form>

<%if flash[:high_low] == "high"%>
    <div class="warning_high">
        <h2>Too High!!</h2>
    </div>
<%end%>

<%if flash[:high_low] == "low"%>
    <div class="warning_low">
        <h2>Too Low!!</h2>
    </div>
<%end%>

<%if flash[:high_low] == "right"%>
    <div class="warning_right">
        <h2><%=session[:number]%> was the number!!</h2>
        <form action="numbers/restart" method="get">
            <input type="submit" value="Play Again">
        </form>
    </div>
<%end%>
